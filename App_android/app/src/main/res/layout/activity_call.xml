<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
    <TextView android:id="@+id/textView4" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#3F51B5" android:textSize="34sp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
        <EditText android:id="@+id/edtcall" android:layout_width="228dp" android:layout_height="match_parent" android:ems="10" android:hint="Nhập số đt để gọi" android:inputType="phone" android:textAlignment="center"/>
        <ImageButton android:id="@+id/imgcall" android:layout_width="172dp" android:layout_height="match_parent" app:srcCompat="@drawable/icon_btn_foreground"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
        <Button android:layout_gravity="center" android:id="@+id/btnback1" android:layout_width="162dp" android:layout_height="match_parent" android:text="QUAY LẠI"/>
    </LinearLayout>
</LinearLayout>