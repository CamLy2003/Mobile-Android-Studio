<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:padding="8dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="36sp" />

    <!-- Dùng weight để đẩy dãy nút xuống bottom -->

    <!-- Row 1 -->
    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">



        <Button
            android:id="@+id/btnDel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="DEL"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btnEqual"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:text="="
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Row 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <Button android:id="@+id/btn1" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="1" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btn2" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="2" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btn3" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="3" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btnDivide" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="/" android:backgroundTint="#4CAF50" android:textSize="18sp"/>
    </LinearLayout>

    <!-- Row 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <Button android:id="@+id/btn4" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="4" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btn5" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="5" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btn6" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="6" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btnMinus" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="-" android:backgroundTint="#4CAF50" android:textSize="18sp"/>
    </LinearLayout>

    <!-- Row 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <Button android:id="@+id/btn7" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="7" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btn8" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="8" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btn9" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="9" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btnMultiply" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="X" android:backgroundTint="#4CAF50" android:textSize="18sp"/>
    </LinearLayout>

    <!-- Row 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button android:id="@+id/btnDot" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="." android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btn0" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="0" android:backgroundTint="#FF9800" android:textSize="18sp"/>
        <Button android:id="@+id/btnPercent" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="%" android:backgroundTint="#4CAF50" android:textSize="18sp"/>
        <Button android:id="@+id/btnPlus" android:layout_weight="1" android:layout_width="0dp" android:layout_height="80dp" android:text="+" android:backgroundTint="#4CAF50" android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>
